{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2015", "DOM"],
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"],
}
