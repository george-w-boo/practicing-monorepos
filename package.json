{
  "name": "@m.ostapysko/base-converter",
  "packageManager": "yarn@4.5.1",
  "version": "1.0.0",
  "description": "A package to convert numbers from one bae to another",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "author": "m.ostapysko",
  "license": "MIT",
  "scripts": {
    "check-types": "tsc --noEmit",
    "clean": "rimraf build",
    "build:js": "tsc",
    "build": "npm-run-all clean build:js",
    "test": "jest",
    "test:clear-cache": "jest --clearCache",
    "test:coverage": "jest --coverage",
    "coverage": "npm-run-all test:clear-cache test:coverage",
    "lint": "eslint 'src/**/*.ts' --fix",
    "docs:build": "typedoc",
    "docs:serve": "serve docs",
    "build-docs": "typedoc",
    "serve-docs": "npm-run-all docs:*",
    "pre-commit": "npm-run-all check-types lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "serve": "^14.2.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3"
  },
  "files": [
    "build/**/*"
  ]
}